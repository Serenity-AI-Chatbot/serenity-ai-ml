{
    "version": 2,
    "builds": [
        {
            "src": "Sentiment.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/journal"
        }
    ],
    "installCommand": "pip install -r requirements.txt",
    "postinstall": "python -m spacy download en_core_web_sm && python -c \"import nltk; nltk.download('punkt')\"",
    "startCommand": "uvicorn Sentiment:app --host 0.0.0.0 --port 8000"
}
